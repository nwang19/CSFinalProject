
public class MovingPlatform extends Platform {

	private final int xVelocity = 1;
	private final int yVelocity = 1;
	private int dir;
	private int lowerBound;
	private int upperBound;
	
	public MovingPlatform(int x, int y, int w, int h, int direction, int lowerB, int upperB) {
		super(x, y, w, h);
		dir = direction;
		lowerBound = lowerB;
		upperBound = upperB;
	}
	
	public int getDir()
	{
		return dir;
	}

	public void setDir(int direction)
	{
		dir = direction;
	}
	
	public int getLBound()
	{
		return lowerBound;
	}
	
	public int getUBound()
	{
		return upperBound;
	}
	
	public void setLBound(int lBound)
	{
		lowerBound = lBound;
	}
	
	public void setUBound(int uBound)
	{
		upperBound = uBound;
	}
	
	public int getXVel()
	{
		return xVelocity;
	}
	
	public int getYVel()
	{
		return yVelocity;
	}
}
